{
    "compilerOptions": {
      "module": "ESNext",
      // "module": "commonjs",
      "target": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
