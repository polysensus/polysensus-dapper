{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
        "baseUrl": ".",
		"checkJs": true,
        "declaration": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": true,
        "noEmit": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "node",
        "outDir": "./dist",
        "paths": {
            "$lib/*": ["src/lib/*"],
        },
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
	},
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "esm": true
    },
}
